<%= form_for @cliente, :html => { :class => "col-md-5 col-centered" } do |f| %>

	<div class="form-group">
		<%= f.label :nome, "Nome:", :class => 'control-label' %><br>
    	<%= f.text_field :nome, :class => 'form-control', :required => 'required' %>
	</div>

	<div class="form-group">
		<%= f.label :cpf, "CPF:", :class => 'control-label' %><br>
    	<%= f.text_field :cpf, :class => 'form-control', :required => 'required' %>
	</div>

	<div class="form-group">
		<%= f.label :email, "E-mail:", :class => 'control-label' %><br>
    	<%= f.email_field :email, :class => 'form-control', :required => 'required' %>
	</div>

	<div class="form-group">
		<%= f.label :data_nasc, "Data de Nascimento:", :class => 'control-label' %><br>
    	<%= f.date_field :data_nasc, :class => 'form-control', :required => 'required' %>
	</div>

	<%= f.submit "Enviar", :class => 'btn btn-primary' %>

<% end %>