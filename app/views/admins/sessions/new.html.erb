<h1 class="text-center bolder"><strong>Lan House - Stuna que eu mato</strong></h1> <br>
<h2 class="text-center">Realize o Login</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => "col-md-5 col-centered" }) do |f| %>
  <div class="field form-group">
    <%= f.label :email, "E-mail:", :class => 'control-label' %><br />
    <%= f.email_field :email, autofocus: true, :class => 'form-control', :required => 'required' %>
  </div>

  <div class="field form-group">
    <%= f.label :password, "Senha:", :class => 'control-label' %><br />
    <%= f.password_field :password, autocomplete: "off", :class => 'form-control', :required => 'required' %>
  </div>

  <div class="actions">
    <%= f.submit "Login", :class => 'btn btn-primary' %>
  </div>
<% end %>
